<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>
<body>
    <h1>Home</h1>
     <%- include('./partials/nav.ejs') %>

    <div class="blogs content">
        <% if (blogs.length > 0) {%>
            <% blogs.forEach(blog => { %>
                <a href="/blog/<%= blog._id%>">
                    <h3><%= blog.title%></h3>
                    <p><%= blog.snippet%></p>
                </a>
            <% }) %>
        <% } else { %>
            <p>there are no blogs to display...</p>
        <% } %>
    </div>
</body>
</html>